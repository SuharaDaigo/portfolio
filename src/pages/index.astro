---
import Hero3D from "../components/Hero3D.jsx";
import LoadingOverlay from "../components/LoadingOverlay.jsx";
import ScrollReveal from "../components/ScrollReveal.jsx";
import ThreeMotion from "../components/ThreeMotion.jsx";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="森のPortfolio | Welcome"
  description="Three.js と Framer Motion によるウェルカム"
>
  <div>
    <LoadingOverlay client:load />
    <section class="hero" style="margin-top:1rem; position:relative; z-index:1">
      <ScrollReveal>
        <div class="card">
          <span class="badge">Welcome</span>
          <h1 style="margin:.4rem 0 0.6rem">
            ようこそ、どうぶつの森風ポートフォリオへ
          </h1>
          <p>
            three.js と framer-motion
            を使った、やわらかい森の雰囲気のサイトです。
            上部ナビゲーションから「学歴」「スキル」「プロジェクト」に移動できます。
          </p>
          <ThreeMotion client:load />
        </div>
      </ScrollReveal>
      <ScrollReveal delay={0.1}>
        <Hero3D client:load />
      </ScrollReveal>
    </section>

    <section
      style="margin-top:2rem; position:relative; z-index:1"
      class="grid cols-3"
    >
      <ScrollReveal>
        <a class="card" href="/history"
          ><span class="badge">1</span><h3>学歴</h3><p>
            学生向けに学歴を紹介します。
          </p></a
        >
      </ScrollReveal>
      <ScrollReveal delay={0.05}>
        <a class="card" href="/skills"
          ><span class="badge">2</span><h3>スキル</h3><p>
            よく使う技術スタックを一覧で。
          </p></a
        >
      </ScrollReveal>
      <ScrollReveal delay={0.1}>
        <a class="card" href="/projects"
          ><span class="badge">3</span><h3>プロジェクト</h3><p>
            制作物をピックアップして掲載。
          </p></a
        >
      </ScrollReveal>
    </section>
  </div>
</BaseLayout>
